# Configuración de Base de Datos
DB_USER=postgres
DB_PASSWORD=secure_password_here
DB_NAME=quintas_crm

# Configuración de Directus (Backend)
# Claves aleatorias UUID: https://www.uuidgenerator.net/
DIRECTUS_KEY=uuid-key-here
DIRECTUS_SECRET=uuid-secret-here
ADMIN_EMAIL=admin@quintas.com
ADMIN_PASSWORD=admin123

# Configuración de Next.js (Frontend)
# URL pública del sitio
NEXT_PUBLIC_API_URL=https://crm.quintas.com
NEXT_PUBLIC_DIRECTUS_URL=https://crm.quintas.com
# URL interna para comunicación entre contenedores (generalmente no se cambia)
DIRECTUS_INTERNAL_URL=http://directus:8055

# Configuración de NextAuth
NEXTAUTH_URL=https://crm.quintas.com
# Generar con: openssl rand -base64 32
NEXTAUTH_SECRET=super_secure_random_string_here

# Configuración de Stripe
# Clave secreta (servidor): sk_test_... (desarrollo) o sk_live_... (producción)
STRIPE_SECRET_KEY=sk_test_your_secret_key
# Clave pública (cliente): pk_test_... (desarrollo) o pk_live_... (producción)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
# Secreto del Webhook de Stripe para validar eventos
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Configuración de Docker Hub (para CI/CD, no necesarias en .env local)
# DOCKERHUB_USERNAME=usuario
# DOCKERHUB_TOKEN=dckr_pat_xxx
