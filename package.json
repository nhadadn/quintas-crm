{
  "name": "quintas-crm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx -y --package node@22 --package directus@latest -- directus start",
    "test": "node tests/validation_suite.mjs",
    "test:integration": "node tests/validation_suite.mjs",
    "test:integration:flows": "jest tests/integration/flows",
    "test:triggers": "node tests/validation_suite.mjs",
    "test:backend": "jest tests/backend",
    "test:backend:coverage": "jest tests/backend --coverage",
    "test:frontend": "cd frontend && npm run test:unit",
    "coverage": "nyc npm run test:backend && nyc npm run test:frontend",
    "coverage:report": "nyc report --reporter=html",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**",
      ".next/**",
      "**/*.test.js",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.config.{js,ts}"
    ]
  },
  "lint-staged": {
    "*.{js,mjs,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.4",
    "cheerio": "^1.2.0",
    "directus": "^11.14.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "jsdom": "^27.0.1",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "mysql2": "^3.16.3",
    "stripe": "^20.3.0",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2"
  }
}
